
<% if !heading.nil? %>
  <div class="row">
    <h2 class="darkblue"><%= heading %></h2>
  </div>
<% end %>

<% if !heading_text.nil? %>
  <div class="row">
    <p><%= heading_text %></p>
    <p class="memo">* = required field</p>
  </div>
<% end %>

<% lines.each do |line| %>
  <div class="row row-form-wrapper no-buffer row-height">
  <% line.cells.each do |cell| %>

  <div class='col-md-<%= cell.gutter %>'>
    <% case cell.type %>
    <% when 'radio' %>
      <%= render 'workflow/radio', cell: cell %>
    <% when 'checkbox' %>
      <%= render 'workflow/checkbox', cell: cell %>
    <% when 'dropdown' %>
      <%= render 'workflow/dropdown', cell: cell %>
    <% when 'text' %>
      <%= render 'workflow/text', cell: cell %>
    <% when 'input' %>
      <%= render 'workflow/input', cell: cell %>
    <% when 'input_date' %>
      <%= render 'workflow/input_date', cell: cell %>
    <% when 'label' %>
      <%= render 'workflow/label', cell: cell %>
    <% when 'raw_html' %>
      <%= render 'workflow/raw_html', cell: cell %>
    <% when 'anchor' %>
      <%= render 'workflow/anchor', cell: cell %>
    <% when 'label_radio' %>
      <%= render 'workflow/label_radio', cell: cell %>
    <% end %>
  </div>
  <% end %>

  </div>
<% end %>
<br><br>


<script type="text/javascript" charset="utf-8">

  $("body").on("change", "#is_required_to_file_taxes_no", function(){
    if ($('#is_required_to_file_taxes_no').is(':checked')) {
      $(this).parents(".row").next().addClass('hide');
    }
    else{
      $(this).parents(".row").next().next().removeClass('hide');
    }
  });
  $("body").on("change", "#is_required_to_file_taxes_yes", function(){

    if ($('#is_required_to_file_taxes_yes').is(':checked')) {
      $(this).parents(".row").next().removeClass('hide');
    }
    else{
      $(this).parents(".row").next().next().addClass('hide');
    }
  });

  $("body").on("change", "#is_claimed_as_tax_dependent_no", function(){
    if ($('#is_claimed_as_tax_dependent_no').is(':checked')) {
      $(this).parents(".row").next().addClass('hide');
    }
    else{
      $(this).parents(".row").next().next().removeClass('hide');
    }
  });
  $("body").on("change", "#is_claimed_as_tax_dependent_yes", function(){

    if ($('#is_claimed_as_tax_dependent_yes').is(':checked')) {
      $(this).parents(".row").next().removeClass('hide');
    }
    else{
      $(this).parents(".row").next().next().addClass('hide');
    }
  });

</script>
